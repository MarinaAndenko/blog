<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="actions">
    <p>
        <%= f.label :name, class: "points"  %><br>
        <%= f.text_area :name, class: "form-control", rows: "2",placeholder: "Name of the post" %>
      </p>
      <br>
      <p>
        <%= f.label :description, class: "points"  %><br>
        <%= f.text_area :description, class: "form-control", rows: "7", id: "comment", placeholder: "Share with others what your post is about..."  %>
      </p>
      <br>
      <p>
        <%= f.label :text, class: "points"  %><br>
        <%= f.text_area :text, class: "form-control", rows: "15", id: "comment", placeholder: "Type the post text here."  %>
      </p>
  </div>
  <div>
    <div class="button-center" ><%= f.submit class: "btn btn-primary" %></div><br>
  </div>
<% end %>